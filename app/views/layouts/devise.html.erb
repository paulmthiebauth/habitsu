<body>
<div class="container">

  <% if flash.any? %>

    <div class="flash">
      <div class="container">
          <% if alert != nil %>
          <%= alert %>
          <% elsif notice.is_a? String %>
          <%= notice %>
          <% elsif notice.size == 1 %>
            <%= notice.first %>
          <% else %>
            <% flash[:notice].each do |flash| %>
            <%= flash %><br />
            <% end %>
            <% end %>
      </div>
    </div>
  <% end %>

<%= yield %>

</body>
