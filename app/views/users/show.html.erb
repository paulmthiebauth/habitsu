<div class="jumbotron">
    <div class="row row-centered">
        <div class="col-xs-4 col-centered">
          <div class="header_text">
          <h3> Statistics </h3>
          </div><br>
          <div class="quote">
          Help others achieve their dreams and you will achieve yours.<br>
          -Les Brown<br>
          </div><br><br><br>
          <b>Daily Completion Rates<b><br><br>
          <img src="http://media.mediatemple.netdna-cdn.com/wp-content/uploads/2014/12/simple-bar-chart.png" width="90%">

          </div>
          <div class="col-xs-4 col-centered">
          <div class="header_text">
          <h3>To Do List</h3>
          </div><br>
          <div class="quote">
          <% @tasks.each do |task|%>
          <% if task.completed_at.nil? %>
          <%= task.name %><br><%= link_to "Complete", complete_task_path(task.id), method: :patch %><br><br>
          <% else %>
          <%= task.name %><br>
          <img src="http://content.systemrequirementslab.com.s3.amazonaws.com/cyri/assets/images/green_checkmark_small.gif"> : <%= task.completed_at %><br><br>
          <% end %>
          <% end %><br>
          </div>
          <%= form_for [@user, @task] do |f| %>
          <%= f.label :name, "+Task: " %><br>
          <%= f.text_field :name %><br>
          <%= f.submit %>
          <% end %>

          </div>
          <div class="col-xs-4 col-centered">
          <div class="header_text">
          <h3>Habit Checklist</h3>
          </div><br>
          <div class="quote">
          <% @habits.each do |habit|%>
          <%= habit.name %><br><br>
          <% end %>
          </div>

          </div>
    </div>
</div>
