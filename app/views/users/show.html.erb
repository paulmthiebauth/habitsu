  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
  <script src="http://code.highcharts.com/highcharts.js"></script>
  <script src="/js/chart.js"></script>
  <link href='http://fonts.googleapis.com/css?family=Quicksand:300,400,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Pinyon+Script' rel='stylesheet' type='text/css'>

    <div class="row">


          <div class="large-3 columns">
            <div class="stats">
            <div class="quote">
          <h3><%= DateTime.now.strftime('%A %B %e, %Y') %>  </h3>
          <br>
          Help others achieve their dreams and you will achieve yours.<br>
          -Les Brown
          </div>
          <div class="graph">
          <div>
          <h3>Daily Completion Rates</h3><br>
          </div>
          <div  id="container"></div>
          </div>
          </div>
          </div>


          <div class="large-5 columns">
            <div class="todo">
          <div>
          <div>
          <h3>To Do List</h3>
          </div><br>
          <div>

            <div class="new-task">
            <%= form_for [@user, @task] do |f| %>
            <div class="task_label">
            <%= f.label :name, '+' %>
            </div>
            <div class="task_name">
            <%= f.text_field :name, size: 10%>
            <div class="task_submit">
            <%= f.submit %>
            </div>
            </div>
            </div>
            <%= current_user.current %>
            <%= link_to "Yesterday", yesterday_user_path%>
            <% @tasks = @tasks.sort_by {|x| x.created_at}.reverse %>
            <% @tasks.each do |task|%>
            <% if task.completed_at.nil? %>
              <% if Time.now - task.created_at > 800 %>
              <%= task.name %><br>
              <img src="http://s9.postimg.org/ddnnijb97/reminder16.png"  height="18px" width="18px"> : <%= link_to "Complete", complete_task_path(task.id), method: :patch%><br><br>
              <% else %>
              <%= task.name %><br><%= link_to "Complete", complete_task_path(task.id), method: :patch %><br><br>
              <% end %>
          <% else %>
          <div class="complete-task">
          <%= task.name %><br>
          <%= link_to image_tag("/check16.png"), incomplete_task_path(task.id), method: :patch, data: { confirm: "Mark this task as incomplete?" }%>: <%= task.completed_at.asctime %><br><br>
          </div>
          <% end %>
          <% end %>
          </div>
          </div>
          <% end %>

          </div>
          </div>

          <div class="large-4 columns">
            <div class="habit">
          <div>
          <h3>Habit Checklist</h3>
          </div><br>
          <div>
          <% @plans.each do |plan|%>
          <div class="planname">
          <%= plan.plan_name %>
          </div>
          <% plan.habits.each do |habit| %>
          <img src="http://s11.postimg.org/xbooefv27/Star16.png"> <%= habit.name %><br><br>
          <% end %>
          <% end %>
          </div>
          </div>
          </div>
    </div>
